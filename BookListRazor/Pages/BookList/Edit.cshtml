@page
@model BoolListRazor.Pages.BookList.EditModel


<br />
<h2 class="text-info">Edit book </h2>
<br />

<div class="border container shadow" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Book.Id" />
        @*asp-validation-summary para obtener todas las validaciones o errores que salgan del modelo*@
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            @*asp-validation-for coloca el error asociado al nombre del libro(en este caso es required
                entonces se mostrara un error si no se llena el campo*@
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Autor"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Autor" class="form-control" />
            </div>
            <span asp-validation-for="Book.Autor" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@*Con esto tenemos que la validacion este en el lado del cliente y no solo del servidor*@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
